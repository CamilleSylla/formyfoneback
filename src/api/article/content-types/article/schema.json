{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "short_desc": {
      "type": "string",
      "required": true,
      "maxLength": 80
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "galerie": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0.01
    },
    "stock": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 100
    },
    "desc": {
      "type": "richtext",
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    },
    "marque": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::marque.marque",
      "inversedBy": "articles"
    },
    "modele": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::modele.modele",
      "inversedBy": "articles"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categorie.categorie",
      "inversedBy": "articles"
    },
    "souscategory": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::souscategorie.souscategorie"
    }
  }
}
